@model IEnumerable<VaccineManagment.Models.Complaint>

@{
    ViewBag.Title = "ManageProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.ex1 {
  background-color: lightblue;
  width: 100%;
  height: 100%;
  overflow: scroll;
}


</style>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script type="text/javascript">
    function GetImageNameInHiddenBox(ID) {
        $("#DeleteLink").attr("href", "/Child/Delete?ID=" + ID);
    }
</script>


<div class="page-content">

    <div class="row ex1">
        <div class="col-lg-12 portlets">

            <div class="panel">
                <div class="panel-header panel-controls">
                    @*<h3><a href="/Child/AddOrEdit" class="btn btn-dark">Add Child</a></h3>*@
                </div>
                <div class="panel-content">
                    <p></p>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel-content pagination2 table-responsive">
                                <table class="table table-hover table-dynamic">
                                    <thead>
                                        <tr>
                                            <th style="display:none;">ID</th>
                                            <th>Message</th>
                                            <th>Complainer Name</th>
                                            <th>Uc</th>
                                            <th>Muhalla</th>
                                            @*<th>Action</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td style="display:none;">
                                                            @Html.DisplayFor(modelItem => item.Id)
                                                        </td>
                                                        <td>
                                                            <textarea cols="30" rows="10" readonly> @item.Message</textarea>
                                                            @*@Html.DisplayFor(modelItem => item.Message)*@
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Parent.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Parent.UnionCouncil.UCName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Parent.Muhalla.Name)
                                                        </td>
                                                        @*<td>
                                                                <a href='~/Child/AddOrEdit?id=@item.Id'>Edit  </a>-
                                                                <a data-toggle="modal" onclick="GetImageNameInHiddenBox(@item.Id);" data-target=" #modal-bottomfull">
                                                                    Delete
                                                                </a>
                                                            </td>*@
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal fade modal-bottomfull" id="modal-bottomfull" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icons-office-52"></i></button>
                <h4 class="modal-title"><strong>Are you</strong> Sure</h4>
            </div>
            <div class="modal-body">
                You want to delete this info ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-embossed" data-dismiss="modal">Cancel</button>
                <a href="" id="DeleteLink" class="btn btn-primary btn-embossed">Delete</a>
            </div>
        </div>
    </div>
</div>



