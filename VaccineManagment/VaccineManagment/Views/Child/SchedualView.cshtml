@model IEnumerable<VaccineManagment.Models.Schedual>
@{
    ViewBag.Title = "SchedualView";
}

<div class="page-content">

    <div class="row">
        <div class="col-lg-12 portlets">

            <div class="panel">
                @*<div class="panel-header panel-controls">
                    <h3><a href="/Child/AddOrEdit" class="btn btn-dark">Add Child</a></h3>
                </div>*@
                <div class="panel-content">
                    <p></p>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel-content pagination2 table-responsive">
                                <table class="table table-hover table-dynamic">
                                    <thead>
                                        <tr>
                                            <th style="display:none;">ID</th>
                                            <th>Child</th>
                                            <th>Vaccinator</th>
                                            <th>Date</th>
                                            <th>Next Date</th>
                                            <th>Polio</th>
                                            <th>Injection</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                         <td style="display:none;">
                                                            @Html.DisplayFor(modelItem => item.Id)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ChildInfo.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Vaccinator.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Vaccination_Date)
                                                        </td><td>
                                                            @Html.DisplayFor(modelItem => item.Next_Date)
                                                        </td><td>
                                                            @Html.DisplayFor(modelItem => item.Polio)
                                                        </td><td>
                                                            @Html.DisplayFor(modelItem => item.Inject)
                                                        </td>


                                                        @*<td>
                                                            <a href='~/Child/AddOrEdit?id=@item.Id'>Edit  </a>-
                                                            <a data-toggle="modal" onclick="GetImageNameInHiddenBox(@item.Id);" data-target=" #modal-bottomfull">
                                                                Delete
                                                            </a>
                                                        </td>*@
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal fade modal-bottomfull" id="modal-bottomfull" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="icons-office-52"></i></button>
                <h4 class="modal-title"><strong>Are you</strong> Sure</h4>
            </div>
            <div class="modal-body">
                You want to delete this info ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-embossed" data-dismiss="modal">Cancel</button>
                <a href="" id="DeleteLink" class="btn btn-primary btn-embossed">Delete</a>
            </div>
        </div>
    </div>
</div>

