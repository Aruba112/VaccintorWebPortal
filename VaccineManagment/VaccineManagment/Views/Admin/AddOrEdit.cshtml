<div class="page-content">

    <div class="row">
        <div class="col-lg-12 portlets">
            <div class="panel">
                <div class="panel-header panel-controls">
                    <h3><a href="/Admin/ManageAdmin" class="btn btn-dark">Manage Admin</a></h3>
                </div>

                <form method="post" id="myform" action="/Admin/AddUpdate">
                    <div class="panel-content">
                        <p id="ilyas"></p>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label"> Name*</label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter  Name", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <label class="form-label">User Name*</label>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Enter  user Name", @required = "required" })
                                    <label>@ViewBag.msg</label>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Email*</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control",@type="email", @placeholder = "Enter  user Name", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Password*</label>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Enter  Password", @required = "required" })
                                </div>


                            </div>
                           
                            <div class="col-md-6">

                            </div>
                        </div>
                        @{
                            string Text = "Add ";
                            if (Model != null)
                            {
                                Text = "Update ";
                                <input type="hidden" name="Id" value="@Model.Id" />
                            }
                        }
                        <button class="btn btn-dark">@Text</button>

                    </div>
                </form>
            </div>
        </div>
    </div>
